@model CRUD.Models.Tbl_clb

<h2>Chỉnh Sửa Câu Lạc Bộ</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Ma_clb" />
    <div class="form-group">
        <label>Tên Câu Lạc Bộ</label>
        <input asp-for="Ten_clb" class="form-control" />
        <span asp-validation-for="Ten_clb" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Lưu Thay Đổi</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
